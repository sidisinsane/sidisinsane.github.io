---
import Icon from "./Icon.astro";

interface Props {
  service: string;
  alias: string;
}

const { service, alias } = Astro.props;
---

{
  service == "homepage" && (
    <a
      href={`https://${alias}`}
      target="_blank"
      rel="noreferrer"
      title="Link to Homepage"
    >
      <Icon name="home" />
    </a>
  )
}

{
  service == "github" && (
    <a
      href={`https://github.com/${alias}`}
      target="_blank"
      rel="noreferrer"
      title="Link to Github"
    >
      <Icon name="github" />
    </a>
  )
}

