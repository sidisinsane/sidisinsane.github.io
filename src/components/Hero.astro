---
import AuthorBar from "./AuthorBar.astro";

interface Props {
  authorSlug?: string;
}

const { authorSlug = import.meta.env.SITE_AUTHOR } = Astro.props;
---

<header class="hero">
  <div class="hero__inner">
    <slot />

    <div class="hero__about">
      <AuthorBar authorSlug={authorSlug} />
    </div>
  </div>
</header>

<style>
  .hero {
    display: grid;
    place-content: center;
    min-height: calc(100vh - var(--page-offset-block-start));
    position: relative;
    z-index: 1;
  }

  @supports (height: 100dvh) {
    .hero {
      min-height: calc(100dvh - var(--page-offset-block-start));
    }
  }

  .hero__inner {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: calc(var(--gap) * 2);
  }

  .hero__about {
    align-self: flex-end;
  }
</style>
